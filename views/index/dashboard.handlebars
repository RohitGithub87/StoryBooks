<h4>Welcome {{user.firstName}}</h4>
<h5>Your Stories</h5>
{{#if stories}}
  <table class="striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Date</th>
        <th>Status</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each stories}}
      <tr>
        <td><a href="/stories/show/{{id}}">{{title}}</a></td>
        <td>{{formatDate story.date 'MMMM Do YYYY'}}</td>
        <td><span class="dash-status">{{status}}</span></td>
        <td>
          <a href="/stories/edit/{{id}}" class="btn left-align">
           <i class="fa fa-pencil"></i> Edit
          </a>

          <form action="/stories/{{id}}?_method=DELETE" id="delete-form" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button class="btn red"><i class="fa fa-remove"></i> Delete </button>
          </form>
        
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p>you have not created any stories yet</p>
{{/if}}